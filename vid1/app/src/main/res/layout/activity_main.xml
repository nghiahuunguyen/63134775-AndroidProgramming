<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center|top"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/nutso1"
        android:text="Nút Số 1"
        android:textSize="20dp"
        android:textColor="#108BF4"
        android:background="#9C27B0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"/>
    <Button
        android:id="@+id/nutso2"
        android:text="Nút Số 2"
        android:textSize="20dp"
        android:textColor="#857A16"
        android:background="#9C27B0"
        android:layout_width="wrap_content"
        andrAddSubMulDiv_Onclickoid:layout_height="wrap_content"
        android:layout_marginTop="10dp"/>
    <Button
        android:id="@+id/nutso3"
        android:text="Nút Số 3"
        android:textSize="20dp"
        android:textColor="#7A5620"
        android:background="#9C27B0"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"/>
</LinearLayout>